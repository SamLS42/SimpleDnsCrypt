<simpleChildWindow:ChildWindow
    x:Class="SimpleDnsCrypt.Windows.AddRuleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
    Title="AddRuleWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="SimpleDnsCrypt"
    lex:ResxLocalizationProvider.DefaultDictionary="Translation"
    ChildWindowWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Padding="10"
            BorderThickness="1">
            <Border.BorderBrush>
                <DrawingBrush
                    Opacity="0.4"
                    TileMode="Tile"
                    Viewport="0,0,8,8"
                    ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Brush="{DynamicResource AccentTextFillColorPrimaryBrush}">
                                <GeometryDrawing.Geometry>
                                    <GeometryGroup>
                                        <RectangleGeometry Rect="0,0,50,50" />
                                        <RectangleGeometry Rect="50,50,50,50" />
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Border.BorderBrush>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        x:Name="RuleHeaderIcon"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                         />
                    <TextBlock
                        x:Name="RuleHeader"
                        Margin="5,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                        
                        TextWrapping="Wrap" />
                </StackPanel>
                <TextBlock
                    x:Name="RuleKeyDescription"
                    Margin="0,10,0,3"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBox x:Name="RuleKey" Margin="0,5,0,0" />
                <TextBlock
                    x:Name="RuleValueDescription"
                    Margin="0,10,0,3"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBox x:Name="RuleValue" Margin="0,5,0,0" />
                <UniformGrid Margin="0,25,0,0" Columns="2">
                    <Button
                        x:Name="AddRule"
                        Width="150"
                        HorizontalAlignment="Left"
                        Click="AddButtonClick"
                        Cursor="Hand"
                        IsDefault="True"
                        Style="{DynamicResource AccentButtonStyle}" />
                    <Button
                        x:Name="Abort"
                        Width="150"
                        HorizontalAlignment="Right"
                        Click="AbortButtonClick"
                        Cursor="Hand"
                        IsDefault="False"
                        Style="{DynamicResource AccentButtonStyle}" />
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</simpleChildWindow:ChildWindow>
