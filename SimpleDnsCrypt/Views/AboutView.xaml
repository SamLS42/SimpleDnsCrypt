<UserControl
    x:Class="SimpleDnsCrypt.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:converters="clr-namespace:SimpleDnsCrypt.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="880"
    Height="Auto"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="SimpleDnsCrypt"
    lex:ResxLocalizationProvider.DefaultDictionary="Translation"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:LicenseLinkToVisibilityConverter x:Key="LicenseLinkToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource LayerFillColorDefaultBrush}">
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="8"
            BorderThickness="1">
            <DockPanel LastChildFill="True">
                <Border DockPanel.Dock="Left">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Center"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="{lex:Loc Key=about_software}"
                            TextWrapping="Wrap" />
                        <ListView
                            Width="220"
                            Height="480"
                            Margin="0,4,0,0"
                            DisplayMemberPath="LicenseHeaderText"
                            ItemsSource="{Binding Licenses}"
                            SelectedIndex="-1"
                            SelectedItem="{Binding SelectedLicense}" />
                    </StackPanel>
                </Border>
                <StackPanel
                    Margin="8,0,0,0"
                    DockPanel.Dock="Right"
                    Orientation="Vertical">
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="{lex:Loc Key=about_license}"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Height="480"
                        Margin="0,5,0,0"
                        Orientation="Vertical">
                        <TextBlock
                            Margin="10,7,0,0"
                            Style="{StaticResource LinkHeaderStyle}"
                            Text="{Binding SelectedLicense.LicenseHeaderText}" />
                        <StackPanel
                            Height="40"
                            Margin="10,7,0,0"
                            Orientation="Horizontal">
                            <StackPanel
                                Margin="2,5,10,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal"
                                Visibility="{Binding SelectedLicense.LicenseCodeLink, Converter={StaticResource LicenseLinkToVisibilityConverter}}">
                                <iconPacks:PackIconMaterial
                                    Width="16"
                                    Height="16"
                                    Margin="0,2,0,0"
                                    Cursor="Hand"
                                    Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                    Kind="GithubCircle" />
                                <Button
                                    cal:Message.Attach="[Action HyperlinkRequestNavigate('code')]"
                                    Focusable="False"
                                    Style="{StaticResource HyperlinkButton}">
                                    <TextBlock Margin="3,0,0,4">
                                        <Hyperlink Focusable="False" Style="{StaticResource LinkHyperLinkStyle}">
                                            <Run Text="{Binding SelectedLicense.LicenseCodeLink.LinkText}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </Button>
                            </StackPanel>
                            <StackPanel
                                Margin="2,5,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal"
                                Visibility="{Binding SelectedLicense.LicenseRegularLink, Converter={StaticResource LicenseLinkToVisibilityConverter}}">
                                <iconPacks:PackIconMaterial
                                    Width="16"
                                    Height="16"
                                    Margin="0,2,0,0"
                                    Cursor="Hand"
                                    Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                    Kind="Link" />
                                <Button
                                    cal:Message.Attach="[Action HyperlinkRequestNavigate('regular')]"
                                    Focusable="False"
                                    Style="{StaticResource HyperlinkButton}">
                                    <TextBlock Margin="3,0,0,4">
                                        <Hyperlink Focusable="False" Style="{StaticResource LinkHyperLinkStyle}">
                                            <Run Text="{Binding SelectedLicense.LicenseRegularLink.LinkText}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <ScrollViewer
                            Height="390"
                            CanContentScroll="True"
                            VerticalScrollBarVisibility="Auto">
                            <TextBlock
                                Height="Auto"
                                Margin="10,5,25,0"
                                FontFamily="Courier New"
                                Text="{Binding SelectedLicense.LicenseText}"
                                TextWrapping="Wrap" />
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>