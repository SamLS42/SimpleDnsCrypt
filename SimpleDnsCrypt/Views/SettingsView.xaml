<UserControl
    x:Class="SimpleDnsCrypt.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SimpleDnsCrypt.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    MinWidth="340"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="SimpleDnsCrypt"
    lex:ResxLocalizationProvider.DefaultDictionary="Translation"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:EnumToCollectionConverter x:Key="EnumToCollectionConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource LayerFillColorDefaultBrush}">
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="8">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="&#xE713;" />
                    <TextBlock
                        Margin="5,0,0,3"
                        VerticalAlignment="Center"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="{lex:Loc Key=settings}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    </StackPanel.Resources>
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_advanced_settings}"
                        Cursor="Hand"
                        IsChecked="{Binding IsAdvancedSettingsTabVisible}" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_query_log}"
                        Cursor="Hand"
                        IsChecked="{Binding IsQueryLogTabVisible}" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_cloak_and_forward}"
                        Cursor="Hand"
                        IsChecked="{Binding IsCloakAndForwardTabVisible}" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_domain_block}"
                        Cursor="Hand"
                        IsChecked="{Binding IsDomainBlockLogTabVisible}"
                        IsEnabled="True" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_domain_blacklist}"
                        Cursor="Hand"
                        IsChecked="{Binding IsDomainBlacklistTabVisible}"
                        IsEnabled="True" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_address_block}"
                        Cursor="Hand"
                        IsChecked="{Binding IsAddressBlockLogTabVisible}"
                        IsEnabled="False" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_address_blacklist}"
                        Cursor="Hand"
                        IsChecked="{Binding IsAddressBlacklistTabVisible}"
                        IsEnabled="False" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_tray_mode}"
                        Cursor="Hand"
                        IsChecked="{Binding IsTrayModeEnabled}" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_backup_and_restore_config}"
                        Cursor="Hand"
                        IsChecked="{Binding BackupAndRestoreConfigOnUpdate}" />
                    <CheckBox
                        Margin="4"
                        Content="{lex:Loc Key=settings_start_in_tray}"
                        Cursor="Hand"
                        IsChecked="{Binding IsStartInTrayEnabled}"
                        IsEnabled="{Binding IsTrayModeEnabled}"
                        Visibility="{Binding IsTrayModeEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <StackPanel Orientation="Vertical">
                        <CheckBox
                            Margin="4"
                            Content="{lex:Loc Key=settings_update_auto}"
                            Cursor="Hand"
                            IsChecked="{Binding IsAutoUpdateEnabled}" />
                        <CheckBox
                            Margin="4"
                            Content="{lex:Loc Key=settings_update_silent}"
                            Cursor="Hand"
                            IsChecked="{Binding IsAutoUpdateSilentEnabled}" />
                        <StackPanel Margin="5,0,0,0" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{lex:Loc Key=settings_update_channel}" />
                            <ComboBox
                                Width="90"
                                Margin="4,0,0,0"
                                VerticalContentAlignment="Center"
                                DisplayMemberPath="Description"
                                IsEnabled="False"
                                ItemsSource="{Binding Path=SelectedUpdateType, Converter={converters:EnumToCollectionConverter}, Mode=OneTime}"
                                SelectedValue="{Binding Path=SelectedUpdateType}"
                                SelectedValuePath="Value" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>